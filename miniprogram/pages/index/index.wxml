<!--index.wxml-->
<view class="container">
	<van-button type="primary" bindtap="tapUploadButton" id="uploadButton">上传文件</van-button>
	<van-button type="primary" bindtap="downFile" id="downloadButton">下载文件</van-button>
	<van-dialog use-slot title="标题" show="{{pop_show}}" show-cancel-button confirm-button-open-type="comfirmFile" bind:close="comfirmFile">
		<van-cell-group>
			<van-field value="{{ value }}" placeholder="请输入文件链接" border="{{ false }}" bind:change="onChange_text" />
		</van-cell-group>
	</van-dialog>
<van-action-sheet
  show="{{ actionSheetShow }}"
  actions="{{ actions }}"
  bind:close="onCloseActionSheet"
  bind:select="onSelectActionSheet"
/>
<van-tabbar active="{{ activeTab }}" bind:change="tabOnChange">
    <van-tabbar-item icon="back-top">发送</van-tabbar-item>
  <van-tabbar-item icon="home-o">我的</van-tabbar-item>
</van-tabbar>
</view>