<view class="logoShow" style="height:{{height/2}}rpx">
	<image style="width:100%" src="/images/logo/ft-logo.png" mode="widthFix"/>
	<text class="describText">轻量化文件分享</text>
</view>
<view class="shadowBox">
<van-row>
	<van-col span="12">
		<view class="uploadMethodSelectCard" style="margin-left:15px;margin-right:5px" bindtap="tapUploadQuestionFileButton" >
			<image class="uploadMethodPicture" src="/images/icons/普通文件.png"></image>
			<view class="titleText">上传普通文件</view>
			<view class="subtitleText">自定义设置，分享给好友并在线预览</view>
		</view>
	</van-col>
	<van-col span="12">
		<view class="uploadMethodSelectCard"  style="margin-left:5px;margin-right:15px" bindtap="tapUploadButton">
			<image class="uploadMethodPicture" src="/images/icons/问答文件.png"></image>
			<view class="titleText">上传问答文件</view>
			<view class="subtitleText">只有答对一定数量的问题才能获取文件</view>
		</view>
	</van-col>
</van-row>
</view>
<van-action-sheet show="{{ actionSheetShow }}" actions="{{ actions }}" bind:close="onCloseActionSheet"
	bind:select="onSelectActionSheet" />
